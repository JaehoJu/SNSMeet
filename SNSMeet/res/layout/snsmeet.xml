<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    >
    <Button android:id="@+id/nfc_connect" android:text="@string/nfc" android:layout_margin="10dip" android:layout_weight="1" android:drawableLeft="@drawable/nfc_logo_100px" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_gravity="center"></Button>
    <Button android:id="@+id/qrcode_connect" android:text="@string/qrcode" android:layout_margin="10dip" android:drawableLeft="@drawable/qrcode_logo_100px" android:layout_weight="1" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_gravity="center"></Button>
</LinearLayout>
