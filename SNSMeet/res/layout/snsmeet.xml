<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <Button android:layout_height="wrap_content" android:id="@+id/nfc_connect" android:text="@string/nfc" android:layout_width="200dip" android:layout_gravity="center" android:layout_margin="10dip" android:layout_weight="1"></Button>
    <Button android:layout_height="wrap_content" android:id="@+id/qrcode_connect" android:text="@string/qrcode" android:layout_width="200dip" android:layout_gravity="center" android:layout_margin="10dip" android:drawableLeft="@drawable/qrcode_logo_100px" android:layout_weight="1"></Button>
    <Button android:text="Button" android:id="@+id/about_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"></Button>
</LinearLayout>
